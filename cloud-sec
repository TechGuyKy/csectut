<span class="line-numbers">058</span>                /AKIA[0-9A-Z]{16}/g,  <span class="syntax-comment">// AWS Access Key</span>
<span class="line-numbers">059</span>                /[A-Za-z0-9/+=]{40}/g, <span class="syntax-comment">// AWS Secret Key</span>
